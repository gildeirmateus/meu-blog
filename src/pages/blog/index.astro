---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const pageTitle = "Todos os Artigos";
---

<BaseLayout title={pageTitle}>
    <h1>ðŸ“° Todos os Artigos</h1>
    <ul class="post-list">
        {sortedPosts.map((post) => (
            <li class="post-card">
                <a href={`/blog/${post.slug}/`} class="post-link">
                    <h3>{post.data.title}</h3>
                </a>
                <div class="post-meta">
                    <time datetime={post.data.pubDate.toISOString()}>
                        ðŸ“… {post.data.pubDate.toLocaleDateString('pt-BR')}
                    </time>
                     | <span>{post.data.state || 'Geral'}</span>
                </div>
                <p>{post.data.description}</p>
            </li>
        ))}
    </ul>
</BaseLayout>

<style>
    .post-list { 
        list-style: none; 
        padding: 0; 
        display: grid;
        gap: 2rem;
        margin-top: 2rem;
    }

    .post-card {
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        border-left: 5px solid var(--color-accent-green);
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        transition: transform 0.2s ease;
    }
    .post-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .post-link { text-decoration: none; }
    .post-card h3 { color: var(--color-header-bg); margin-bottom: 0.5rem; }
    .post-meta { font-size: 0.85rem; color: #777; margin-bottom: 1rem; }
</style>
