---
// src/layouts/BaseLayout.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Consultoria Ambiental especializada em MG e SP" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Sementaria Ambiental</title>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="site-header">
      <nav>
        <a href="/" class="logo-link" aria-label="Sementaria Ambiental Home">
          <img src="/logo-arvore.png" alt="Logo √Årvore" class="logo-img" />
          <span class="logo-text">Sementaria Ambiental</span>
        </a>
        <ul class="top-nav">
          <li><a href="/">In√≠cio</a></li>
          <li><a href="/sobre">Sobre</a></li>
          <li><a href="/blog">Artigos</a></li>
          <li><a href="/admin" class="admin-icon">üçÉ</a></li> 
        </ul>
      </nav>
    </header>

    <div class="main-wrapper">
        <aside class="sidebar">
            <h3>Atua√ß√£o Regional</h3>
            <p style="font-size: 0.9rem; margin-bottom: 1rem; color: #555;">Selecione seu estado para ver legisla√ß√µes e artigos espec√≠ficos:</p>
            <nav class="state-nav">
                <ul>
                    <li><a href="/mg">üå≤ Minas Gerais</a></li>
                    <li><a href="/sp">üèôÔ∏è S√£o Paulo</a></li>
                    <li class="separator"></li>
                    <li><a href="/blog">üì∞ Artigos Recentes</a></li>
                </ul>
            </nav>
        </aside>

        <main class="content-area">
            <slot /> 
        </main>
    </div>

    <footer class="site-footer">
      <div class="footer-content">
        <p>¬© 2025 Sementaria Ambiental. Consultoria especializada.</p>
      </div>
    </footer>

    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>
    <script is:inline>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
        const isTokenPresent = window.location.hash.includes('token=') ||
                               window.location.hash.includes('recovery=') ||
                               window.location.hash.includes('invite=');
        if (isTokenPresent) {
          window.netlifyIdentity.open();
        }
      }
    </script>
  </body>
</html>

<style is:global>
  /* --- Vari√°veis de Cor --- */
  :root {
    --color-bg-main: #8D7E71;
    --color-text-dark: #3E2723;
    --color-text-light: #EFEBE9;
    --color-header-bg: #4E342E;
    --color-content-bg: #FAF8F7;
    --color-sidebar-bg: #D7CCC8;
    --color-accent-green: #33691E;
    --font-heading: 'Merriweather', serif;
    --font-body: 'Open Sans', sans-serif;
  }

  /* Reset */
  * { box-sizing: border-box; margin: 0; padding: 0; }
  
  body {
    font-family: var(--font-body);
    line-height: 1.7;
    color: var(--color-text-dark);
    
    /* --- CONFIGURA√á√ÉO DO FUNDO CORRIGIDA --- */
    background-color: var(--color-bg-main);
    /* Lembre-se de colocar a imagem na pasta 'public' */
    background-image: url('/textura-folha.jpg'); 
    background-repeat: no-repeat; /* N√£o repete lado a lado */
    background-size: cover;       /* Estica para cobrir a tela toda */
    background-attachment: fixed; /* O fundo fica parado ao rolar */
    background-position: center;
    
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a { color: var(--color-accent-green); text-decoration: none; transition: color 0.2s; }
  a:hover { color: var(--color-header-bg); text-decoration: underline; }
  img { max-width: 100%; height: auto; display: block; }
  h1, h2, h3 { font-family: var(--font-heading); color: var(--color-header-bg); }

  /* Cabe√ßalho */
  .site-header {
    background: var(--color-header-bg);
    color: var(--color-text-light);
    padding: 0.8rem 0;
    box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    position: sticky; /* Menu fica fixo no topo no celular tamb√©m */
    top: 0;
    z-index: 100;
  }

  .site-header nav {
    /* Aumentei para 1400px para ir mais para a esquerda */
    max-width: 1400px; 
    margin: auto;
    display: flex;
    justify-content: space-between;
    padding: 0 1.5rem;
    align-items: center;
  }

  /* Logo */
  .logo-link { display: flex; align-items: center; gap: 12px; text-decoration: none !important; }
  .logo-img { 
      width: 45px; height: auto; 
      filter: drop-shadow(0 0 2px rgba(255,255,255,0.3)); /* Destaque sutil */
  }
  .logo-text {
      font-family: var(--font-heading);
      font-weight: bold;
      font-size: 1.3rem;
      color: var(--color-text-light);
      display: none; 
  }
  @media (min-width: 480px) { .logo-text { display: block; } }

  .site-header ul.top-nav { display: flex; gap: 1.5rem; list-style: none; }
  .site-header ul.top-nav a { color: var(--color-text-light); font-weight: 600; font-size: 0.95rem; }
  .admin-icon { font-size: 1.2rem; }

  /* Layout Wrapper */
  .main-wrapper {
      flex: 1;
      width: 100%;
      /* Aumentei aqui para 1400px para expandir para os lados */
      max-width: 1400px; 
      margin: 2rem auto;
      padding: 0 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 2rem;
  }

  /* Sidebar */
  .sidebar {
      background: var(--color-sidebar-bg);
      padding: 1.5rem;
      border-radius: 8px;
      border-left: 5px solid var(--color-accent-green);
      box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
  }
  .sidebar h3 { margin-bottom: 0.5rem; font-size: 1.2rem; }
  .state-nav ul { list-style: none; }
  .state-nav li { margin-bottom: 0.5rem; }
  .state-nav .separator { margin: 1rem 0; border-bottom: 1px solid rgba(0,0,0,0.1); }
  .state-nav a {
      display: block;
      padding: 0.6rem 1rem;
      background: rgba(255,255,255,0.6);
      border-radius: 4px;
      color: var(--color-header-bg);
      font-weight: 700;
      transition: all 0.2s;
  }
  .state-nav a:hover {
      background: var(--color-accent-green);
      color: white;
      text-decoration: none;
      transform: translateX(5px); /* Efeito de movimento ao passar o mouse */
  }

  /* √Årea de Conte√∫do */
  .content-area {
    background: var(--color-content-bg);
    padding: 3rem;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border-top: 5px solid var(--color-header-bg);
  }

  /* CLASSE NOVA PARA A INTRO (Use isso no seu index.astro) */
  .blog-intro {
    background-color: #EFEBE9;
    padding: 2rem;
    border-radius: 8px;
    margin-bottom: 2rem;
    border-left: 4px solid var(--color-header-bg);
  }
  .blog-intro h1 { font-size: 2rem; margin-bottom: 1rem; }
  .blog-intro p { font-size: 1.1rem; margin-bottom: 1rem; }

  /* Rodap√© */
  .site-footer {
    background: var(--color-header-bg);
    color: rgba(255,255,255,0.8);
    padding: 2rem 0;
    text-align: center;
    margin-top: auto;
    font-size: 0.9rem;
  }

  /* Responsividade */
  @media (min-width: 900px) { /* Mudei para 900px para garantir espa√ßo */
      .main-wrapper {
          display: grid;
          /* Sidebar fixa em 280px, o resto √© conte√∫do */
          grid-template-columns: 280px 1fr;
          gap: 3rem;
          align-items: start;
      }
      .sidebar { position: sticky; top: 5rem; }
      .logo-img { width: 55px; }
  }
</style>