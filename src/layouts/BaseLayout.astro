        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    
        <script>
        if (window.netlifyIdentity) {
            // 1. Verifica se h√° um token na URL (o #recovery= √© um token)
            const isTokenPresent = window.location.hash.includes('token=') ||
                                window.location.hash.includes('recovery=') ||
                                window.location.hash.includes('invite=');

            // 2. Se houver um token, abre o widget for√ßadamente para processar o link.
            if (isTokenPresent) {
            window.netlifyIdentity.open();
            }

            // 3. Se o login for bem-sucedido (ap√≥s reset), redireciona para o admin
            window.netlifyIdentity.on('login', () => {
                if (window.location.pathname !== '/admin/') {
                    window.location.href = '/admin/';
                }
            });
        }
        </script>
	</body>
