
---
// src/layouts/BaseLayout.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Descri√ß√£o do meu blog incr√≠vel" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <nav>
        <a href="/" class="logo">Meu Blog</a>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/sobre">Sobre</a></li>
          <li><a href="/keystatic">üîí Admin</a></li> 
        </ul>
      </nav>
    </header>

    <main class="container">
      <slot /> 
    </main>

    <footer class="site-footer">
      <div class="footer-content">
        <p>¬© 2023 Meu Blog. Feito com Astro.</p>
        
        <a href="/keystatic" class="admin-link" aria-label="Acesso Administrativo">
          üîí √Årea Admin
        </a>
      </div>
    </footer>

    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>
    
    <script is:inline>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });

        // L√≥gica de recupera√ß√£o de senha e redirecionamento
        const isTokenPresent = window.location.hash.includes('token=') ||
                               window.location.hash.includes('recovery=') ||
                               window.location.hash.includes('invite=');

        if (isTokenPresent) {
          window.netlifyIdentity.open();
        }
      }
    </script>
  </body>
</html>

<style is:global>
  /* Reset b√°sico */
  * { box-sizing: border-box; margin: 0; padding: 0; }
  
  body {
    font-family: system-ui, sans-serif;
    line-height: 1.6;
    color: #333;
    background-color: #f4f4f9;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a { color: #0056b3; text-decoration: none; }
  img { max-width: 100%; height: auto; }

  /* Estrutura */
  .container {
    width: 100%;
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    flex: 1; /* Faz o main empurrar o footer para baixo */
  }

  /* Cabe√ßalho e Rodap√© */
  .site-header, .site-footer {
    background: #333;
    color: white;
    padding: 1rem 0;
    text-align: center;
  }

  .site-header nav {
    max-width: 800px;
    margin: auto;
    display: flex;
    justify-content: space-between;
    padding: 0 1rem;
    align-items: center;
  }

  .site-header ul { display: flex; gap: 1rem; list-style: none;}
  .site-header a { color: white; }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  /* Estilo do bot√£o admin */
  .admin-link {
    font-size: 0.8rem;
    color: #999;
    text-decoration: none;
    border: 1px solid #555;
    padding: 4px 10px;
    border-radius: 4px;
    transition: all 0.2s;
    background: rgba(255,255,255,0.05);
  }
  
  .admin-link:hover {
    background-color: #eee;
    color: #333;
    border-color: #eee;
  }
</style>