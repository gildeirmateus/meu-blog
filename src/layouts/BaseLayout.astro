---
// src/layouts/BaseLayout.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Consultoria Ambiental especializada em MG e SP" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Sementaria Ambiental</title>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="site-header">
      <nav>
        <a href="/" class="logo-link" aria-label="Sementaria Ambiental Home">
          <svg class="logo-svg" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
             <path d="M50 90 C 50 90, 30 80, 30 50 C 30 20, 50 10, 50 10 C 50 10, 70 20, 70 50 C 70 65, 60 75, 55 78" stroke="white" stroke-width="2" fill="none"/>
             <circle cx="50" cy="35" r="15" fill="white" fill-opacity="0.2"/>
             <path d="M50 50 L40 30 M50 50 L60 35 M50 50 L50 25 M45 60 L35 45 M55 60 L65 40" stroke="white" stroke-width="2" stroke-linecap="round"/>
             <path d="M70 50 C 75 50, 85 55, 85 70 C 85 85, 75 90, 70 92" stroke="white" stroke-width="2" fill="none" stroke-dasharray="4 2"/>
             <text x="10" y="98" fill="white" font-size="10px">Sementaria</text>
          </svg>
          <span class="logo-text">Sementaria Ambiental</span>
        </a>
        <ul class="top-nav">
          <li><a href="/">In√≠cio</a></li>
          <li><a href="/sobre">Sobre</a></li>
          <li><a href="/admin" class="admin-icon">üçÉ</a></li> 
        </ul>
      </nav>
    </header>

    <div class="main-wrapper">
        <aside class="sidebar">
            <h3>Atua√ß√£o Regional</h3>
            <nav class="state-nav">
                <ul>
                    <li><a href="/mg">üå≤ Minas Gerais</a></li>
                    <li><a href="/sp">üèôÔ∏è S√£o Paulo</a></li>
                    <li><a href="/blog">üì∞ Blog Recentes</a></li>
                </ul>
            </nav>
        </aside>

        <main class="content-area">
            <slot /> 
        </main>
    </div>

    <footer class="site-footer">
      <div class="footer-content">
        <p>¬© 2025 Sementaria Ambiental. Consultoria especializada.</p>
      </div>
    </footer>

    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>
    
    <script is:inline>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });

        const isTokenPresent = window.location.hash.includes('token=') ||
                               window.location.hash.includes('recovery=') ||
                               window.location.hash.includes('invite=');

        if (isTokenPresent) {
          window.netlifyIdentity.open();
        }
      }
    </script>
  </body>
</html>

<style is:global>
  /* --- Vari√°veis de Cor do Tema (Paleta Capuchino/Natureza) --- */
  :root {
    --color-bg-main: #8D7E71; /* Cor Capuchino s√≥lida para fundo */
    --color-text-dark: #3E2723; /* Marrom escuro para texto */
    --color-text-light: #EFEBE9; /* Cor clara para texto em fundos escuros */
    --color-header-bg: #4E342E; /* Marrom caf√© forte para cabe√ßalho */
    --color-content-bg: #FAF8F7; /* Creme quase branco para √°reas de leitura */
    --color-sidebar-bg: #D7CCC8; /* Bege claro para sidebar */
    --color-accent-green: #33691E; /* Verde floresta para destaques e links */
    --font-heading: 'Merriweather', serif;
    --font-body: 'Open Sans', sans-serif;
  }

  /* Reset b√°sico */
  * { box-sizing: border-box; margin: 0; padding: 0; }
  
  body {
    font-family: var(--font-body);
    line-height: 1.7;
    color: var(--color-text-dark);
    
    /* --- CONFIGURA√á√ÉO DO FUNDO --- */
    background-color: var(--color-bg-main); /* Cor s√≥lida de fallback */
    
    /* IMPORTANTE: Substitua a URL abaixo pela sua imagem de textura de folha */
    background-image: url('/textura-folha.jpg');
    background-repeat: repeat;
    background-blend-mode: multiply; /* Ajuda a misturar a textura com a cor de fundo */
    
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a { 
      color: var(--color-accent-green);
      text-decoration: none; 
      transition: color 0.2s;
  }
  a:hover {
      color: var(--color-header-bg);
      text-decoration: underline;
  }
  img { max-width: 100%; height: auto; display: block; }
  h1, h2, h3 { font-family: var(--font-heading); color: var(--color-header-bg); }
 
  /* --- Cabe√ßalho --- */
  .site-header {
    background: var(--color-header-bg);
    color: var(--color-text-light);
    padding: 1rem 0;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .site-header nav {
    max-width: 1200px; /* Largura m√°xima maior para telas grandes */
    margin: auto;
    display: flex;
    justify-content: space-between;
    padding: 0 1.5rem;
    align-items: center;
  }

  /* Estilos da Logo */
  .logo-link {
      display: flex;
      align-items: center;
      gap: 10px;
      text-decoration: none !important;
  }
  .logo-svg {
      width: 50px;
      height: 50px;
      /* O SVG j√° est√° configurado como branco internamente */
  }
  .logo-text {
      font-family: var(--font-heading);
      font-weight: bold;
      font-size: 1.2rem;
      color: var(--color-text-light);
      display: none; /* Esconde texto em mobile muito pequeno, mostra depois */
  }
  @media (min-width: 480px) { .logo-text { display: block; } }


  .site-header ul.top-nav { 
      display: flex; 
      gap: 1.5rem; 
      list-style: none;
  }
  .site-header ul.top-nav a { 
      color: var(--color-text-light);
      font-weight: 600;
  }
  .admin-icon { font-size: 1.2rem; }

  /* --- Layout Principal (Wrapper) --- */
  .main-wrapper {
      flex: 1; /* Empurra o rodap√© */
      width: 100%;
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1.5rem;
      
      /* Layout padr√£o (Mobile): Empilhado */
      display: flex;
      flex-direction: column;
      gap: 2rem;
  }

  /* --- Sidebar (Menu Lateral) --- */
  .sidebar {
      background: var(--color-sidebar-bg);
      padding: 1.5rem;
      border-radius: 8px;
      border-left: 4px solid var(--color-accent-green);
  }
  .sidebar h3 { margin-bottom: 1rem; color: var(--color-header-bg); }
  .state-nav ul { list-style: none; }
  .state-nav li { margin-bottom: 0.8rem; }
  .state-nav a {
      display: block;
      padding: 0.5rem;
      background: rgba(255,255,255,0.5);
      border-radius: 4px;
      color: var(--color-header-bg);
      font-weight: 600;
  }
  .state-nav a:hover {
      background: var(--color-accent-green);
      color: white;
      text-decoration: none;
  }

  /* --- √Årea de Conte√∫do --- */
  .content-area {
    background: var(--color-content-bg);
    padding: 2.5rem;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    border-top: 4px solid var(--color-header-bg);
  }

  /* --- Rodap√© --- */
  .site-footer {
    background: var(--color-header-bg);
    color: rgba(255,255,255,0.7);
    padding: 2rem 0;
    text-align: center;
    margin-top: auto;
  }

  /* =========================================
     MEDIA QUERIES (Responsividade)
     ========================================= */
  
  /* Layout para Tablets e Desktops (acima de 768px) */
  @media (min-width: 768px) {
      .main-wrapper {
          /* Muda para CSS Grid */
          display: grid;
          /* Define as colunas: Sidebar fixa (260px) e Conte√∫do flex√≠vel (1fr) */
          grid-template-columns: 260px 1fr;
          gap: 3rem;
          align-items: start; /* Alinha os itens ao topo */
      }

      .sidebar {
          /* Opcional: Torna a sidebar fixa ao rolar a p√°gina em telas grandes */
          position: sticky;
          top: 2rem;
      }
      
      .logo-svg { width: 60px; height: 60px; }
      .logo-text { font-size: 1.5rem; }
  }
</style>